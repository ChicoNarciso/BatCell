<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BatCell.Pages.AliadosPage"
             Title="Bat-Celular | Aliados"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="BAT-CELULAR | Bat-FamÃ­lia"
                   TextColor="White"
                   FontSize="24"
                   HorizontalOptions="Center"
                   Margin="0, 20, 0, 20"
                   FontAttributes="Bold" />

            <Label Text="ALIADOS"
                   TextColor="#42A5F5"
                   FontSize="20"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <CollectionView x:Name="AliadosList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="0, 10" Spacing="5">
                            <Label Text="{Binding Nome}" 
                                   TextColor="{Binding CorDestaque}" 
                                   FontSize="18" 
                                   FontAttributes="Bold" />

                            <Label Text="{Binding Descricao}" 
                                   TextColor="White" 
                                   LineBreakMode="WordWrap" />

                            <BoxView HeightRequest="1" Color="#333333" Margin="0, 10, 0, 10" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="VOLTAR" 
                    BackgroundColor="#333333" 
                    TextColor="White"
                    Clicked="OnVoltarClicked"
                    Margin="0, 40, 0, 20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>